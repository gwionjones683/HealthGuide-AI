--- script.js ---
(function () {
  const PREMIUM_KEY = "hg_premium";
  const LOGIN_KEY = "hg_logged_in";
  const JOURNAL_KEY_PREFIX = "hg_journal_";

  function getCurrentPage() {
    return document.body.dataset.page || "home";
  }

  function initYear() {
    const yearSpan = document.getElementById("year");
    if (yearSpan) yearSpan.textContent = new Date().getFullYear();
  }

  function getPremium() {
    return localStorage.getItem(PREMIUM_KEY) === "1";
  }

  function setPremium(value) {
    if (value) localStorage.setItem(PREMIUM_KEY, "1");
    else localStorage.removeItem(PREMIUM_KEY);
  }

  function setLoggedIn(value) {
    if (value) localStorage.setItem(LOGIN_KEY, "1");
    else localStorage.removeItem(LOGIN_KEY);
  }

  function isLoggedIn() {
    return localStorage.getItem(LOGIN_KEY) === "1";
  }

  function initAuthModal() {
    const openButtons = [
      document.getElementById("openAuth"),
      document.getElementById("openAuthHero")
    ].filter(Boolean);
    const modal = document.getElementById("authModal");
    const closeBtn = document.getElementById("closeAuth");
    const tabs = document.querySelectorAll(".tab");
    const loginTab = document.getElementById("loginTab");
    const premiumTab = document.getElementById("premiumTab");
    const loginBtn = document.getElementById("loginBtn");
    const activatePremiumBtn = document.getElementById("activatePremium");
    const deactivatePremiumBtn = document.getElementById("deactivatePremium");
    const status = document.getElementById("authStatus");

    if (!modal) return;

    openButtons.forEach(btn => {
      btn.addEventListener("click", () => {
        modal.classList.remove("hidden");
        status.textContent = "";
      });
    });

    if (closeBtn) {
      closeBtn.addEventListener("click", () => modal.classList.add("hidden"));
    }

    // Tabs
    tabs.forEach(tab => {
      tab.addEventListener("click", () => {
        tabs.forEach(t => t.classList.remove("active"));
        tab.classList.add("active");
        const target = tab.dataset.tab;
        [loginTab, premiumTab].forEach(panel => {
          if (!panel) return;
          panel.classList.toggle("hidden", panel.id !== target);
        });
      });
    });

    if (loginBtn) {
      loginBtn.addEventListener("click", () => {
        setLoggedIn(true);
        status.textContent = "Logged in (demo only – stored in this browser).";
      });
    }

    if (activatePremiumBtn) {
      activatePremiumBtn.addEventListener("click", () => {
        setPremium(true);
        status.textContent = "Premium activated for this browser (demo mode).";
        applyPremiumVisibility();
      });
    }

    if (deactivatePremiumBtn) {
      deactivatePremiumBtn.addEventListener("click", () => {
        setPremium(false);
        status.textContent = "Premium turned off for this browser.";
        applyPremiumVisibility();
      });
    }
  }

  function applyPremiumVisibility() {
    const premiumSections = document.querySelectorAll(".premium-section");
    const premium = getPremium();
    premiumSections.forEach(sec => {
      sec.style.display = premium ? "" : "none";
    });
  }

  function initSearchHome() {
    if (getCurrentPage() !== "home") return;
    const input = document.getElementById("searchInput");
    const button = document.getElementById("searchButton");
    const resultsTitle = document.getElementById("resultsTitle");
    const results = document.getElementById("searchResults");
    const popularGrid = document.getElementById("popularGrid");

    // Popular cards
    if (popularGrid && Array.isArray(SYMPTOMS)) {
      const top = SYMPTOMS.slice(0, 8);
      top.forEach(s => {
        const card = document.createElement("div");
        card.className = "card";
        card.innerHTML = `
          <a href="symptom.html?slug=${encodeURIComponent(s.slug)}">
            <h3>${s.title}</h3>
            <p>${s.short}</p>
          </a>`;
        popularGrid.appendChild(card);
      });
    }

    function doSearch() {
      if (!input || !results) return;
      const q = input.value.toLowerCase().trim();
      results.innerHTML = "";
      if (!q) {
        resultsTitle.classList.add("hidden");
        return;
      }
      const matches = SYMPTOMS.filter(s =>
        s.title.toLowerCase().includes(q) ||
        (s.keywords && s.keywords.toLowerCase().includes(q))
      );
      resultsTitle.classList.remove("hidden");
      if (matches.length === 0) {
        results.innerHTML = `<div class="card"><p>No matches found. Try a simpler phrase like "headache" or "chest tightness".</p></div>`;
        return;
      }
      matches.forEach(s => {
        const card = document.createElement("div");
        card.className = "card";
        card.innerHTML = `
          <a href="symptom.html?slug=${encodeURIComponent(s.slug)}">
            <h3>${s.title}</h3>
            <p>${s.short}</p>
          </a>`;
        results.appendChild(card);
      });
    }

    if (button) button.addEventListener("click", doSearch);
    if (input) {
      input.addEventListener("keydown", e => {
        if (e.key === "Enter") doSearch();
      });
    }
  }

  function getSlugFromQuery() {
    const params = new URLSearchParams(window.location.search);
    return params.get("slug") || "";
  }

  function initSymptomPage() {
    if (getCurrentPage() !== "symptom") return;
    const slug = getSlugFromQuery();
    const symptom = SYMPTOMS.find(s => s.slug === slug);
    const titleEl = document.getElementById("symptomTitle");
    const taglineEl = document.getElementById("symptomTagline");
    const badgeList = document.getElementById("badgeList");
    const overviewEl = document.getElementById("symptomOverview");
    const causesEl = document.getElementById("symptomCauses");
    const redFlagsEl = document.getElementById("symptomRedFlags");
    const specialistsEl = document.getElementById("symptomSpecialists");
    const tipsEl = document.getElementById("symptomTips");
    const relatedEl = document.getElementById("symptomRelated");
    const questionsEl = document.getElementById("symptomQuestions");
    const affiliatePrimaryTitle = document.getElementById("affiliatePrimaryTitle");
    const affiliateSecondaryTitle = document.getElementById("affiliateSecondaryTitle");
    const affiliatePrimaryLink = document.getElementById("affiliatePrimaryLink");
    const affiliateSecondaryLink = document.getElementById("affiliateSecondaryLink");

    if (!symptom) {
      if (titleEl) titleEl.textContent = "Symptom not found";
      if (overviewEl) overviewEl.textContent = "We couldn't find a guide for that symptom.";
      return;
    }

    document.title = `${symptom.title} – HealthGuide AI`;
    if (titleEl) titleEl.textContent = symptom.title;
    if (taglineEl) taglineEl.textContent = symptom.tagline;
    if (overviewEl) overviewEl.textContent = symptom.overview;

    if (badgeList) {
      badgeList.innerHTML = "";
      symptom.tags.forEach(t => {
        const span = document.createElement("span");
        span.className = "badge";
        span.textContent = t;
        badgeList.appendChild(span);
      });
    }

    function fillList(el, items) {
      if (!el) return;
      el.innerHTML = "";
      items.forEach(text => {
        const li = document.createElement("li");
        li.innerHTML = text;
        el.appendChild(li);
      });
    }

    fillList(causesEl, symptom.causes);
    fillList(redFlagsEl, symptom.redFlags);
    fillList(specialistsEl, symptom.specialists);
    fillList(tipsEl, symptom.tips);
    fillList(questionsEl, symptom.questions);

    if (relatedEl) {
      const related = symptom.related
        .map(sl => SYMPTOMS.find(s => s.slug === sl))
        .filter(Boolean);
      if (related.length === 0) {
        relatedEl.textContent = "Explore other symptom topics from the home page.";
      } else {
        relatedEl.innerHTML = related
          .map(r => `<a href="symptom.html?slug=${encodeURIComponent(r.slug)}">${r.title}</a>`)
          .join(", ");
      }
    }

    if (affiliatePrimaryTitle && symptom.affiliatePrimary) {
      affiliatePrimaryTitle.textContent = symptom.affiliatePrimary.title;
      affiliatePrimaryLink.href = symptom.affiliatePrimary.url || "#";
    }
    if (affiliateSecondaryTitle && symptom.affiliateSecondary) {
      affiliateSecondaryTitle.textContent = symptom.affiliateSecondary.title;
      affiliateSecondaryLink.href = symptom.affiliateSecondary.url || "#";
    }

    initJournal(slug);
  }

  function journalKey(slug) {
    return JOURNAL_KEY_PREFIX + slug;
  }

  function initJournal(slug) {
    const list = document.getElementById("journalList");
    const input = document.getElementById("journalInput");
    const saveBtn = document.getElementById("saveJournal");
    if (!list || !input || !saveBtn) return;

    function render() {
      list.innerHTML = "";
      const raw = localStorage.getItem(journalKey(slug));
      if (!raw) return;
      const entries = JSON.parse(raw);
      entries.forEach(e => {
        const div = document.createElement("div");
        div.className = "journal-entry";
        const date = new Date(e.time).toLocaleString();
        div.textContent = `[${date}] ${e.text}`;
        list.appendChild(div);
      });
    }

    saveBtn.addEventListener("click", () => {
      const text = input.value.trim();
      if (!text) return;
      const raw = localStorage.getItem(journalKey(slug));
      const entries = raw ? JSON.parse(raw) : [];
      entries.unshift({ time: Date.now(), text });
      localStorage.setItem(journalKey(slug), JSON.stringify(entries));
      input.value = "";
      render();
    });

    render();
  }

  document.addEventListener("DOMContentLoaded", () => {
    initYear();
    initAuthModal();
    applyPremiumVisibility();
    initSearchHome();
    initSymptomPage();
  });
})();

--- symptoms.js ---
